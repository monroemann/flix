<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <h2>Reviews</h2>

  <% if @reviews.present? %>
    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
          <span class="stars">
            <%= review.stars %> STARS
          </span><br>
          <p>
            <%= review.comment %>
          </p><br>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user),
      class: "button edit" %>
    </div>
  <% end %>
  <% if current_user_admin? || current_user?(@user) %>
    <div class="actions">
      <%= link_to "Delete Account", @user, method: :delete,
        data: {confirm: "Permanently delete your account?"},
        class: "button delete" %>
    </div>
  <% end %>


</section>