
  <section class="movie">
    <div class="image">
      <%= image_tag @movie.image_file_name  %>
    </div>
    <div class="summary">
      <h2>
        <%= @movie.title %>
      </h2><br>
      <h3>
        Gross: <%= total_gross(@movie) %>
      </h3>
      <p>
        Director: <%= @movie.director %>
      </p>
      <p>
        Description: <%= @movie.duration %>
      </p>
      <p>
        Description: <%= @movie.description %>
      </p>
      <p>
        Released in: <%= year_of(@movie) %>
      </p>
      <p>
        Rating: <%= @movie.rating %>
      </p>
      <p>
        <%= link_to "Write Review", new_movie_review_path(@movie), class: "review" %>
        <%= link_to pluralize(@movie.reviews.size, "review"),
            movie_reviews_path(@movie) %>
      </p>
    </div>
  </section>

  <section class="admin">
    <%= link_to 'Edit', edit_movie_path(@movie), class: "button" %>
    <%= link_to 'Delete', movie_path(@movie), class: "button", method: :delete, data: { confirm: 'Are you sure?' } %>
  </section>