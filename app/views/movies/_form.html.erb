<%= form_with(model: @movie, local: true) do |f| %>
  <h3>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </h3>

  <p>
    <%= f.label :total_gross %>
    <%= f.number_field :total_gross %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :released_on %>
    <%= f.date_select :released_on %>
  </p>
  <p>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </p>

  <%= f.submit %>
<% end %>