<%= form_with(model: movie, local: true) do |f| %>

  <%= render 'shared/errors', object: movie %>

  <h3>
    <%= f.label :title, autofocus: true %>
    <%= f.text_field :title %>
  </h3>

  <p>
    <%= f.label :director %>
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :image_file_name %>
    <%= f.text_field :image_file_name %>
  </p>  

  <p>
    <%= f.label :total_gross %>
    <%= f.number_field :total_gross %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :released_on %>
    <%= f.date_select :released_on %>
  </p>
  <p>
    <%= f.label :rating %>
    <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
  </p>

  <%= f.submit %>
<% end %>